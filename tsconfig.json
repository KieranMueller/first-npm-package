{
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": ["ESNext"],
        "module": "ESNext",
        "target": "ESNext",
        "moduleDetection": "force",
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true
    }
}
